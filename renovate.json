{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enableVulnerabilityAlertsWithLabel(security)"
  ],
  "timezone": "UTC",
  "schedule": ["before 6am on monday"],
  "labels": ["dependencies"],
  "reviewers": ["cychiang"],
  "assignees": ["cychiang"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": false,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "semanticCommitType": "deps",
  "semanticCommitScope": null,
  "branchPrefix": "renovate/",
  "branchTopic": "{{{depNameSanitized}}}-{{{newMajor}}}x",
  "prTitle": "{{semanticCommitType}}{{#if semanticCommitScope}}({{semanticCommitScope}}){{/if}}: {{commitMessageAction}} {{commitMessageTopic}} {{commitMessageExtra}}",
  "packageRules": [
    {
      "description": "Go modules",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "addLabels": ["go", "dependencies"],
      "semanticCommitType": "deps",
      "semanticCommitScope": "go"
    },
    {
      "description": "Go major version updates",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "addLabels": ["go", "dependencies", "major-update"],
      "prPriority": 10,
      "semanticCommitType": "deps",
      "semanticCommitScope": "go"
    },
    {
      "description": "Go development tools",
      "matchManagers": ["gomod"],
      "matchPackagePatterns": [
        "mvdan.cc/gofumpt",
        "github.com/golangci/golangci-lint",
        "golang.org/x/tools"
      ],
      "addLabels": ["go", "tools", "dependencies"],
      "semanticCommitType": "build",
      "semanticCommitScope": "tools"
    },
    {
      "description": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "addLabels": ["github-actions", "dependencies"],
      "semanticCommitType": "ci",
      "semanticCommitScope": "actions"
    },
    {
      "description": "GitHub Actions major updates",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "addLabels": ["github-actions", "dependencies", "major-update"],
      "prPriority": 8,
      "semanticCommitType": "ci",
      "semanticCommitScope": "actions"
    },
    {
      "description": "Docker base images",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "addLabels": ["docker", "dependencies"],
      "semanticCommitType": "deps",
      "semanticCommitScope": "docker"
    },
    {
      "description": "Docker major updates",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "addLabels": ["docker", "dependencies", "major-update"],
      "prPriority": 6,
      "semanticCommitType": "deps",
      "semanticCommitScope": "docker"
    },
    {
      "description": "Security updates - high priority",
      "matchPackagePatterns": ["*"],
      "vulnerabilityAlerts": true,
      "automerge": false,
      "addLabels": ["security", "dependencies"],
      "prPriority": 20,
      "semanticCommitType": "fix",
      "semanticCommitScope": "security"
    },
    {
      "description": "Pin Docker digests",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["pin"],
      "automerge": false,
      "addLabels": ["docker", "pin-digest"],
      "semanticCommitType": "deps",
      "semanticCommitScope": "docker"
    },
    {
      "description": "Group Kubernetes related packages",
      "matchPackagePatterns": ["k8s.io", "sigs.k8s.io"],
      "groupName": "kubernetes packages",
      "addLabels": ["kubernetes", "dependencies"],
      "semanticCommitType": "deps",
      "semanticCommitScope": "k8s"
    },
    {
      "description": "Group Crossplane related packages",
      "matchPackagePatterns": ["github.com/crossplane"],
      "groupName": "crossplane packages",
      "addLabels": ["crossplane", "dependencies"],
      "semanticCommitType": "deps",
      "semanticCommitScope": "crossplane"
    },
    {
      "description": "Group testing packages",
      "matchPackagePatterns": ["github.com/onsi/", "github.com/stretchr/testify"],
      "groupName": "testing packages",
      "addLabels": ["testing", "dependencies"],
      "semanticCommitType": "test",
      "semanticCommitScope": "deps"
    },
    {
      "description": "Kubebuilder framework updates",
      "matchPackagePatterns": ["sigs.k8s.io/kubebuilder"],
      "addLabels": ["kubebuilder", "dependencies"],
      "semanticCommitType": "deps",
      "semanticCommitScope": "kubebuilder",
      "prPriority": 15
    }
  ],
  "osvVulnerabilityAlerts": true,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ¤– Dependency Dashboard",
  "dependencyDashboardHeader": "This issue lists Renovate updates and detected dependencies. Read the [Dependency Dashboard](https://docs.renovatebot.com/key-concepts/dashboard/) docs to learn more.",
  "dependencyDashboardLabels": ["dependencies", "renovate"],
  "configWarningReuseIssue": false
}
