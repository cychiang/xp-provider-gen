{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enableVulnerabilityAlertsWithLabel(security)"
  ],
  "timezone": "America/Los_Angeles",
  "schedule": ["before 6am on monday"],
  "labels": ["dependencies"],
  "reviewers": ["cychiang"],
  "assignees": ["cychiang"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": false,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "semanticCommitType": "deps",
  "semanticCommitScope": null,
  "commitMessagePrefix": "deps: ",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "branchPrefix": "renovate/",
  "branchTopic": "{{{depNameSanitized}}}-{{{newMajor}}}{{#if isPatch}}.{{{newMinor}}}{{/if}}.x",
  "prTitle": "{{commitMessagePrefix}}{{commitMessageAction}} {{commitMessageTopic}} {{commitMessageExtra}}",
  "prBodyTemplate": "This PR contains the following updates:\n\n| Package | Type | Update | Change |\n|---------|------|--------|---------|\n{{#each upgrades as |upgrade|}}\n| {{upgrade.depName}} | {{upgrade.depType}} | {{upgrade.updateType}} | `{{upgrade.currentVersion}}` -> `{{upgrade.newVersion}}` |\n{{/each}}\n\n---\n\n### Release Notes\n\n{{#each upgrades as |upgrade|}}\n{{#if upgrade.hasReleaseNotes}}\n<details>\n<summary>{{upgrade.depName}}</summary>\n\n{{upgrade.releaseNotes}}\n</details>\n{{/if}}\n{{/each}}\n\n---\n\n### Configuration\n\nðŸ“… **Schedule**: {{schedule}}\n\nðŸš¦ **Automerge**: Disabled by author config. Please merge manually.\n\nâ™» **Rebasing**: Whenever PR is behind base branch, or you tick the rebase/retry checkbox.\n\nðŸ”• **Ignore**: Close this PR and you won't be reminded about {{#unless (len upgrades)}this update{{else}}these updates{{/unless}} again.\n\n---\n\n - [ ] <!-- rebase-check -->If you want to rebase/retry this PR, click this checkbox.\n\n---\n\nThis PR has been generated by [Renovate Bot](https://github.com/renovatebot/renovate).",
  "packageRules": [
    {
      "description": "Go modules",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "addLabels": ["go", "dependencies"]
    },
    {
      "description": "Go major version updates",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "addLabels": ["go", "dependencies", "major-update"],
      "prPriority": 10
    },
    {
      "description": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "addLabels": ["github-actions", "dependencies"],
      "semanticCommitType": "ci"
    },
    {
      "description": "GitHub Actions major updates",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "addLabels": ["github-actions", "dependencies", "major-update"],
      "prPriority": 8,
      "semanticCommitType": "ci"
    },
    {
      "description": "Docker base images",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "addLabels": ["docker", "dependencies"],
      "semanticCommitType": "docker"
    },
    {
      "description": "Docker major updates",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "addLabels": ["docker", "dependencies", "major-update"],
      "prPriority": 6,
      "semanticCommitType": "docker"
    },
    {
      "description": "Security updates - high priority",
      "matchPackagePatterns": ["*"],
      "vulnerabilityAlerts": true,
      "automerge": false,
      "addLabels": ["security", "dependencies"],
      "prPriority": 20
    },
    {
      "description": "Pin Docker digests",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["pin"],
      "automerge": false,
      "addLabels": ["docker", "pin-digest"],
      "semanticCommitType": "docker"
    },
    {
      "description": "Group Kubernetes related packages",
      "matchPackagePatterns": ["k8s.io", "sigs.k8s.io"],
      "groupName": "kubernetes packages",
      "addLabels": ["kubernetes", "dependencies"]
    },
    {
      "description": "Group Crossplane related packages",
      "matchPackagePatterns": ["github.com/crossplane"],
      "groupName": "crossplane packages",
      "addLabels": ["crossplane", "dependencies"]
    },
    {
      "description": "Group testing packages",
      "matchPackagePatterns": ["github.com/onsi/", "github.com/stretchr/testify"],
      "groupName": "testing packages",
      "addLabels": ["testing", "dependencies"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "vulnerability"],
    "prPriority": 25
  },
  "osvVulnerabilityAlerts": true,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ¤– Dependency Dashboard",
  "dependencyDashboardHeader": "This issue lists Renovate updates and detected dependencies. Read the [Dependency Dashboard](https://docs.renovatebot.com/key-concepts/dashboard/) docs to learn more.",
  "dependencyDashboardLabels": ["dependencies", "renovate"],
  "configWarningReuseIssue": false
}
